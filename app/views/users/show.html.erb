<h1><i class="fa-solid fa-person">プロフィール</i></h1>
<div>
  <p>Name: <%= @user.name %></p>
  <%= link_to "プロフィール編集",edit_user_path(current_user) %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
<p><%= @user.name %>が作成したスレッド一覧</p>
<table class="table table-striped">
        <thead>
          <tr>
            <th>スレッド名</th>
            <th>スレッド説明</th>
            <th>コメント数</th>
            <th>経過時間</th>
            <th>操作</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @lists.each do |list| %>
            <td><%= link_to subject_path(list.id) do %>
                  <%= list.title %><br>
                <% end %>
            </td>
            <td><%= list.body %></td>
            <td><%= "#{list.comments.count} コメント" %></td>
            <td><i class="far fa-clock clock-icon"></i><%= time_ago_in_words(list.created_at) %>前</td>
            <td><% if list.user == current_user %>
                <%= link_to "削除", subject_path(@lists), method: :delete, data: { confirm: '本当に削除しますか？' } %>
              <% end %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </div>
    </div>
  </div>
</div>
<%= paginate @lists %>
