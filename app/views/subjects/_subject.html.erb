<div class="container mt-5">
  <div class="text-center">
    <h2 class="mb-4">かんたん新規投稿</h2>

    <% if list.errors.any? %>
      <div class="alert alert-danger">
        <%= list.errors.count %> 件のエラーが発生しました
        <ul>
          <% list.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: list, url: subjects_path, method: :post, class: "w-50 mx-auto" do |f| %><!--このフォームは list モデルと関連付けられており、フォームが送信されるときにはPOSTリクエストが /subjects に送信されることになる。-->
      <div class="form-group">
        <h4 class="text-left">タイトル</h4>
        <%= f.text_field :title, class: "form-control", placeholder: "スレッドのタイトルを入力" %>
      </div>

      <div class="form-group">
        <h4 class="text-left">本文</h4>
        <%= f.text_area :body, class: "form-control", placeholder: "スレッドの詳細を入力", rows: 5 %>
      </div>

      <div class="form-group text-center mt-4">
        <%= f.submit '投稿', class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
