  <h2>かんたん新規投稿</h2>
  <% if list.errors.any? %>
  <%= list.errors.count %>件のエラーが発生しました
  <ul>
    <% list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: list, url: subjects_path,  method: :post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>